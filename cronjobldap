apiVersion: batch/v1
kind: CronJob
metadata:
  name: ldap-group-sync
  namespace: openshift-config
spec:
  schedule: "0 6,18 * * *"
  jobTemplate:
    spec:
      template:
        spec:
          serviceAccountName: ldap-sync-sa
          restartPolicy: OnFailure
          containers:
          - name: sync
            image: registry.redhat.io/openshift4/ose-cli
            command:
              - /bin/bash
              - -c
              - |
                oc adm groups sync \
                  --sync-config=/config/ldap-group-sync.yaml \
                  --confirm
            volumeMounts:
              - name: config
                mountPath: /config
              - name: ldap-secret
                mountPath: /ldap-secret
                readOnly: true
          volumes:
            - name: config
              configMap:
                name: ldap-sync-config
            - name: ldap-secret
              secret:
                secretName: ldap-secret
